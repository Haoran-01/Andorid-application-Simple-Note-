        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_picture"
        app:shapeAppearanceOverlay="@style/roundedCornerImageStyle" />

